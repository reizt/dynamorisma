{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src", "*.*"],
		"ignore": ["node_modules", ".git", ".pkg", ".build"]
	},
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 160
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"style": {
				"noDefaultExport": "off",
				"useNamingConvention": "off",
				"noNamespace": "off",
				"noNonNullAssertion": "off",
				"useBlockStatements": "off"
			},
			"performance": {
				"noBarrelFile": "off"
			},
			"correctness": {
				"noUndeclaredVariables": "off",
				"noUnusedVariables": "off"
			},
			"suspicious": {
				"useAwait": "off",
				"noConsoleLog": "off",
				"noExplicitAny": "off"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"noBannedTypes": "off"
			}
		}
	}
}
